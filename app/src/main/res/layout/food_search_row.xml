<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/foodSearchView"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/editText"
        android:layout_toRightOf="@+id/editText"
        android:text="TextView"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/editText"
        android:layout_width="82dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/foodSearchView"
        android:layout_alignBottom="@+id/foodSearchView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Food Item"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/editText2"
        android:layout_width="62dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText"
        android:background="@android:color/transparent"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Carbs"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/carbsView"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/foodSearchView"
        android:layout_toEndOf="@+id/editText2"
        android:layout_toRightOf="@+id/editText2"
        android:text="TextView"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/editText3"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:layout_below="@+id/foodSearchView"
        android:layout_toEndOf="@+id/carbsView"
        android:layout_toRightOf="@+id/carbsView"
        android:background="@android:color/transparent"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Protein"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/proteinView"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/editText3"
        android:layout_toEndOf="@+id/editText3"
        android:layout_toRightOf="@+id/editText3"
        android:text="TextView"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/editText4"
        android:layout_width="32dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/proteinView"
        android:layout_toEndOf="@+id/proteinView"
        android:layout_toRightOf="@+id/proteinView"
        android:background="@android:color/transparent"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Fat"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/fatView"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/editText4"
        android:layout_toEndOf="@+id/editText4"
        android:layout_toRightOf="@+id/editText4"
        android:text="TextView"
        android:textSize="24sp" />
</RelativeLayout>